{
  "manifest_version": 3,
  "name": "OpenDyslexic Font Switcher",
  "description": "Change the font of any website to OpenDyslexic.",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "file:///*"
      ],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "fonts/OpenDyslexic-Regular.otf",
        "fonts/OpenDyslexic-Bold.otf",
        "fonts/OpenDyslexic-Italic.otf"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
